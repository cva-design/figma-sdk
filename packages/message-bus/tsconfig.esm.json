{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"tsBuildInfoFile": "./.tsc/esm.tsbuildinfo",
		"outDir": "./dist/esm",
		"rootDir": "./src",
		"composite": true,
		"declaration": true,
		"noEmit": false
	},
	"include": ["src/**/*"],
	"exclude": ["tests/**/*"]
}
