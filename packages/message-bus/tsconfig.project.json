{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./.tsc",
    "emitDeclarationOnly": false,
    "incremental": true,
    "tsBuildInfoFile": "./.tsc/project.tsbuildinfo"
  },
  "include": ["./src/**/*"],
  "exclude": ["tests/**/*", "docs/**/*"]
}
