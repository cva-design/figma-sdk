{
	"extends": "../../tsconfig.options.json",
	"compilerOptions": {
		"noEmit": true,
		"emitDeclarationOnly": false,
		"verbatimModuleSyntax": false,
		"baseUrl": "./",
		"typeRoots": ["./node_modules/@types", "./node_modules/@figma"],
		"paths": {
			"@figma-plugin-sdk/message-bus": [
				"./src/index.ts"
			],
			"@figma-plugin-sdk/message-bus/*": [
				"./src/*"
			]
		}
	},
	"include": [
		"./src/**/*",
		"./tests/**/*"
	]
}
