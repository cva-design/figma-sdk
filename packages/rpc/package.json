{
  "name": "@figma-plugin-sdk/rpc",
  "version": "0.0.2",
  "description": "A browser package.",
  "type": "module",
  "keywords": ["node", "lib", "esm"],
  "author": "moon",
  "license": "MIT",
  "repository": "https://github.com/moonrepo/examples",
  "scripts": {
    "build": "tsc -b tsconfig.build.json",
    "check": "nr check:biome && nr check:types",
    "check:biome": "biome check --fix ./src",
    "check:types": "tsc --build tsconfig.project.json --pretty --verbose",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": ["dist"],
  "main": "./dist/lib/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/lib/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/lib/index.js"
    }
  },
  "imports": {
    "#source": "./src/index.ts",
    "#source/*": "./src/*",
    "#tests": "./tests/index.ts",
    "#tests/*": "./tests/*"
  },
  "dependencies": {
    "@figma-plugin-sdk/message-bus": "^0.0.1"
  },
  "devDependencies": {
    "@ryoppippi/unplugin-typia": "^1.1.0",
    "@types/bun": "^1.1.14",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "ts-patch": "^3.3.0",
    "type-fest": "^4.30.0",
    "typescript": "^5.7.2",
    "typia": "^7.4.1",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "typia": "^7.4.1"
  }
}
