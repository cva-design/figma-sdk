{
  "name": "@cva.design/figma-sdk",
  "version": "0.0.1",
  "description": "An SDK for creating Figma plugins in Svelte SDK",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "test": "npm run test:integration && npm run test:unit",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "dprint fmt .",
    "test:integration": "playwright test",
    "test:unit": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "---- lint -----------------------------------------": "",
    "lint": "pnpm biome check .",
    "lint:fix": "pnpm biome check --fix .",
    "lint:unsafe-fix": "pnpm biome check --unsafe-fix .",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "svelte": "./dist/ui/index.js"
    },
    "./ui/*": {
      "types": "./dist/ui/*/index.d.ts",
      "svelte": "./dist/ui/*/index.svelte"
    },
    "./ui/*.svelte": {
      "types": "./dist/*.d.ts",
      "svelte": "./dist/*.svelte"
    },
    "./icons": {
      "types": "./dist/icons/ui2/index.d.ts",
      "svelte": "./dist/icons/ui2/index.js"
    },
    "./icons/*.svg": {
      "types": "./dist/icons/index.d.ts",
      "svelte": "./dist/icons/index.js"
    },
    "./icons/ui3": {
      "types": "./dist/icons/ui3/index.d.ts",
      "default": "./dist/icons/ui3/index.js",
      "svelte": "./dist/icons/ui3/index.js"
    },
    "./icons/ui3/*.svg": {
      "default": "./dist/icons/ui3/*.svg"
    }
  },
  "files": ["dist", "!dist/**/*.test.*", "!dist/**/*.spec.*"],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@antfu/ni": "^0.23.0",
    "@chromatic-com/storybook": "^1.9.0",
    "@kemuridama/storybook-addon-github": "^1.3.0",
    "@playwright/test": "^1.28.1",
    "@storybook/addon-console": "^3.0.0",
    "@storybook/addon-essentials": "^8.3.5",
    "@storybook/addon-interactions": "^8.3.5",
    "@storybook/addon-links": "^8.3.5",
    "@storybook/addon-storysource": "^8.3.5",
    "@storybook/addon-svelte-csf": "^4.1.7",
    "@storybook/blocks": "^8.3.5",
    "@storybook/svelte": "^8.3.5",
    "@storybook/sveltekit": "^8.3.5",
    "@storybook/test": "^8.3.5",
    "@storybook/theming": "^8.3.5",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@types/eslint": "^9.6.0",
    "@typescript-eslint/utils": "^8.8.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.9.0",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^15.0.0",
    "mdsvex": "^0.12.3",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.2.0",
    "storybook": "^8.3.5",
    "storybook-dark-mode": "^4.0.2",
    "svelte": "^4.2.7",
    "svelte-check": "^4.0.0",
    "tsx": "^4.19.1",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.11",
    "vitest": "^2.0.0"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "eslintConfig": {
    "extends": ["plugin:storybook/recommended"]
  },
  "dependencies": {
    "@biomejs/biome": "^1.9.3",
    "@poppanator/sveltekit-svg": "^4.2.1",
    "svelte-click-outside": "^1.0.0"
  }
}
